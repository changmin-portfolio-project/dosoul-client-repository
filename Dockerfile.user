# Multi-stage build for user-web
FROM node:18-alpine AS base

# Build argument
ARG BUILD_TARGET=user

# Single build stage - install dependencies and build
FROM base AS builder
WORKDIR /app

# Copy all source code
COPY . .

# Install all dependencies (including dev dependencies for build)
RUN npm install

# Build all workspace packages and user-web application
RUN npm run build:user

# Production image, copy all the files and run the app
FROM nginx:alpine AS runner
WORKDIR /usr/share/nginx/html

# Copy built files
COPY --from=builder /app/apps/user-web/dist .

# Copy nginx configuration
COPY .conf/nginx.user.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
